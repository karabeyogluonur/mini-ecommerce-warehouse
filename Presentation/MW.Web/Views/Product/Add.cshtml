@model ProductAddModel

<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Ürün Ekle
                </h2>
            </div>
        </div>
    </div>
</div>

<div class="page-body d-print-none">
    <div class="container-xl">
        <div class="row">
            <form asp-action="Add" asp-controller="Product" class="card" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="row row-cards">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label required">Ürün Ad</label>
                                <input asp-for="Name" type="text" class="form-control" placeholder="Ürün Adı" required>
                                <div class="invalid-feedback" style="display:block;"><span asp-validation-for="Name"></span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3 ">
                                <label class="form-label">Açıklama</label>
                                <textarea rows="3" asp-for="Description" type="" class="form-control" placeholder="Açıklama"></textarea>
                                <div class="invalid-feedback" style="display:block;"><span asp-validation-for="Description"></span></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label required">Barkod</label>
                                <input asp-for="Barcode" type="text" class="form-control" placeholder="Barkod">
                                <div class="invalid-feedback" style="display:block;"><span asp-validation-for="Barcode"></span></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label required">Alış Fiyat</label>
                                <input asp-for="PurchasePrice" min="0.00" step="0.05" value="1.00" type="number" class="form-control" placeholder="Alış Fiyatı">
                                <div class="invalid-feedback" style="display:block;"><span asp-validation-for="PurchasePrice"></span></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label required">Satış Fiyat</label>
                                <input asp-for="SalePrice" type="number" min="0.00" step="0.05" value="1.00" class="form-control" placeholder="Satış Fiyatı">
                                <div class="invalid-feedback" style="display:block;"><span asp-validation-for="SalePrice"></span></div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label required">Depo Kodu</label>
                                <input asp-for="WarehouseCode" type="text" class="form-control" placeholder="Depo Kodu">
                                <div class="invalid-feedback" style="display:block;"><span asp-validation-for="WarehouseCode"></span></div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label required ">Durum</label>
                                <label class="form-check form-switch">
                                    <input asp-for="Active" class="form-check-input" type="checkbox" checked="">
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="mb-3">
                                <div class="form-label">Ürün Resim</div>
                                <input type="file" asp-for="ProductImage" class="form-control">
                                <div class="invalid-feedback" style="display:block;"><span asp-validation-for="ProductImage"></span></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>
